{
  "name": "tpv-monitor",
  "version": "1.0.0",
  "description": "A simple Node.js monitoring application",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "start:prod": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:ts": "ts-node src/server.ts",
    "type-check": "tsc --noEmit",
    "build:mem": "node --max-old-space-size=1024 node_modules/typescript/bin/tsc -p tsconfig.json",
    "start:mem": "npm run build:mem && node dist/server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "googleapis": "^126.0.1",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "@slack/web-api": "^7.0.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/cors": "^2.8.13",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "nodemon": "^3.0.1"
  }
}
